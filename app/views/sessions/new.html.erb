<!-- views/sessions/new.html.erb (User Login Form with Bootstrap Template) -->
<!DOCTYPE html>
<html lang="en">
<head>
  <!-- ... existing head content ... -->
  <!-- Add Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
  <!-- ... -->
</head>
<body>
<% if flash.now[:danger] %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <strong>Error:</strong> <%= flash.now[:danger] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<section class="vh-100">
  <div class="container-fluid h-100">
    <div class="row h-100">
      <div class="col-md-6 d-flex align-items-center justify-content-center">
        <div class="px-5">
          <span class="h1 fw-bold mb-0">Dinnect</span>
          <%= form_for :session, url: login_path, html: { class: "w-100" } do |f| %>
            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>

            <div class="form-outline mb-4">
              <%= f.text_field :username_or_email, class: 'form-control form-control-lg', placeholder: 'User Name or Email address', required: true %>
            </div>

            <div class="form-outline mb-4">
              <%= f.password_field :password, class: 'form-control form-control-lg', placeholder: 'Password', required: true %>
            </div>

            <div class="pt-1 mb-4">
              <%= f.submit 'Login', class: 'btn btn-info btn-lg btn-block' %>
            </div>

            <%= link_to "Forgot password?", "#!", class: "small mb-5 pb-lg-2 text-muted" %>
            <p>Don't have an account? <%= link_to "Register here", signup_path, class: 'link-info' %></p>
          <% end %>
        </div>
      </div>
      <div class="col-md-6 px-0 d-none d-md-block">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img3.webp"
          alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
      </div>
    </div>
  </div>
</section>

<!-- Add Bootstrap JS and other dependencies -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
