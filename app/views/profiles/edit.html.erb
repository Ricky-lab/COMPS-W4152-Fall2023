<!-- app/views/profiles/edit.html.erb -->

<div class="container mt-4">
  <h1 class="text-center mb-4">Edit Your Profile</h1>

  <%= form_for @profile, html: { class: 'needs-validation', novalidate: true } do |f| %>
    <div class="mb-3">
      <%= f.label :first_name, class: 'form-label' %>
      <%= f.text_field :first_name, class: 'form-control', placeholder: "First Name" %>
    </div>

    <div class="mb-3">
      <%= f.label :last_name, class: 'form-label' %>
      <%= f.text_field :last_name, class: 'form-control', placeholder: "Last Name" %>
    </div>

    <div class="mb-3">
      <%= f.label :class_name, class: 'form-label' %>
      <%= f.text_field :class_name, class: 'form-control', placeholder: "Class Name" %>
    </div>

    <div class="mb-3">
      <%= f.label :school, class: 'form-label' %>
      <%= f.text_field :school, class: 'form-control', placeholder: "School" %>
    </div>

    <div class="mb-3">
      <%= f.label :major, class: 'form-label' %>
      <%= f.text_field :major, class: 'form-control', placeholder: "Major" %>
    </div>

    <div class="mb-4">
      <%= f.label :dietary_preference, class: 'form-label' %>
      <%= f.text_field :dietary_preference, class: 'form-control', placeholder: "Dietary Preference" %>
    </div>

    <div class="text-center">
      <%= f.submit "Update Profile", class: 'btn btn-primary btn-lg' %>
      </div>
      <div class="text-center">
      <%= link_to 'Back to Profiles', user_path(@current_user) , class: 'btn btn-secondary btn-lg'%>
    </div>
  <% end %>
</div>
