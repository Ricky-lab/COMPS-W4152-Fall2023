<h1>My Events</h1>
<%= stylesheet_link_tag 'event', media: 'all' %>

<%= link_to 'My Profile', user_path(current_user), class: 'btn btn-info profile-button' %>

<!-- Buttons for toggling views -->
<button onclick="showHolders()" class="btn btn-primary toggle-button">Show Holder Events</button>
<button onclick="showParticipators()" class="btn btn-primary toggle-button">Show Participator Events</button>
<%= link_to 'New Event', new_event_path %>
<!-- Holder Events Section -->
<div id="holder-events" style="display: none;">
  <% @holder_events.each do |user_event| %>
    <div class="event">
      <h2><%= link_to user_event.event.title, event_path(user_event.event) %></h2> 
      <!-- <p>Role: <%= user_event.role.capitalize %></p> -->
      <p><%= user_event.event.description %></p>
      <%= link_to 'Edit', edit_event_path(user_event.event) %>
    </div>
  <% end %>
</div>

<!-- Participator Events Section -->
<div id="participator-events" style="display: none;">
  <% @participator_events.each do |user_event| %>
    <div class="event">
      <h2><%= link_to user_event.event.title, event_path(user_event.event) %></h2> 
      <!-- <p>Role: <%= user_event.role.capitalize %></p> -->
      <p><%= user_event.event.description %></p>
    </div>
  <% end %>
</div>

<%= link_to 'All Events', events_path, class: 'btn btn-primary return-to-all-events' %>

<script>
  function showHolders() {
    document.getElementById('holder-events').style.display = 'block';
    document.getElementById('participator-events').style.display = 'none';
  }

  function showParticipators() {
    document.getElementById('holder-events').style.display = 'none';
    document.getElementById('participator-events').style.display = 'block';
  }
  window.onload = function() {
    showHolders();
  };
</script>
